{% extends page | template('layout') %}

{% block baseJumbotron %}
    <div class="bs-docs-masthead" id="jumbotron">
        <div class="container">
            <h1 class="home-title">{{ theme.about.siteName }}</h1>
            <p class="lead">{{ theme.about.description }}</p>
            <p class="lead">
                <a href="https://github.com/{{ theme.about.githubUsername }}/{{ theme.about.githubRepo }}"
                   class="btn btn-outline-inverse btn-lg">Download</a>
            </p>
            <p class="version">Currently {{ site.version }}</p>
        </div>
    </div>
{% endblock %}