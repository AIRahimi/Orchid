{% extends page | template('layout') %}

{% block pageContent %}

    <article class="post single">
        <header>
            <div class="title">
                <h2><a href="{{ post.link }}">{{ post.title }}</a></h2>
                <p>{{ post.tagline }}</p>
            </div>
            <div class="meta">
                <time class="published"
                      datetime="{{ post.publishedDate('yyyy-MM-dd') }}">{{ post.publishedDate() }}</time>
                <a href="#" class="author"><span class="name">{{ post.author.name }}</span><img
                            src="{{ post.author.avatar }}" alt=""/></a>
            </div>
        </header>
        <a href="{{ post.link }}" class="image featured"><img src="{{ post.featuredImage }}" alt="{{ post.featuredImageAlt }}"/></a>
        {{ post.content }}
        <footer>
            <span class="grow">Categorized under <a
                        href="{{ post.categoryPage.link }}">{{ post.categoryPage.title }}</a></span>
            <span><b>Tags: </b></span>
            <ul class="stats">
                {% for tagPage in post.tagPages %}
                    <li><a href="{{ tagPage.link }}">{{ tagPage.tag }}</a></li>
                {% endfor %}
            </ul>
        </footer>
    </article>

    <!-- start:inject components -->
    {% if post.components and post.components.remainingComponents.size > 0 %}
        {% for component in post.components.remainingComponents %}
            <article class="post single">
                <div class="component component-{{ component.key }}">
                    {% include component | template('component') ignore missing %}
                </div>
            </article>
        {% endfor %}
    {% endif %}
    <!-- end:inject components -->

{% endblock %}
