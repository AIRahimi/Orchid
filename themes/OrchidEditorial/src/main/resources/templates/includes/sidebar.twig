<div id="sidebar">
    <div class="inner">

        <!-- Search -->
        <section id="search" class="alt">
            <form method="post" action="#">
                <input type="text" name="query" id="query" placeholder="Search"/>
            </form>
        </section>

        <!-- Menu -->
        <nav id="siteNav" class="menu">
            <header class="major">
                <h2>{{ theme.about.name }}</h2>
            </header>
            <ul class="top-level">
                {% for menuItem in theme.menu.menuItems %}
                    {% include 'includes/menuItem.twig' with {menuItem: menuItem} only %}
                {% endfor %}
            </ul>

            {% if not page.menu.isEmpty() %}
                <hr>
                <ul class="top-level">
                    {% for menuItem in page.menu.menuItems %}
                        {% include 'includes/menuItem.twig' with {menuItem: menuItem} only %}
                    {% endfor %}
                </ul>
            {% endif %}
        </nav>

    </div>
</div>