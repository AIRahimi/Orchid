<div class="inner">
    <footer id="footer text-center">

        <div class="clearfix">
            {% if page.previous %}
                <div class="float-left">
                    <a href="{{ page.previous.link }}" class="button special small pill"><span>&larr;</span> {{ page.previous.title }}</a>
                </div>
            {% endif %}

            {% if page.next %}
                <div class="float-right">
                    <a href="{{ page.next.link }}" class="button special small pill">{{ page.next.title }} <span>&rarr;</span></a>
                </div>
            {% endif %}
        </div>

        <p class="text-center">
            &copy; JavaEden. All rights reserved.
        </p>
        <p class="text-center">
            Design: <a href="https://html5up.net">HTML5 UP</a>.
            Created with <a href="https://github.com/JavaEden/Orchid">Orchid </a> and <b>Orchid Editorial Theme</b>.
        </p>
        <p class="text-center">
            Currently: {{ flags.v }}.
        </p>
    </footer>

</div>
