{% if index.packages %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false">All packages <span class="caret"></span></a>
        <ul class="dropdown-menu scrollable-menu">
            {% set packages = index.packages | walk('url') %}
            {% if packages.size > 0 %}
                {% for p in packages %}
                    <li><a href="{{ p.url }}">{{ p.name }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </li>
{% endif %}