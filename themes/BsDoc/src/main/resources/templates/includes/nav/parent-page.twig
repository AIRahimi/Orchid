
{% block parent %}
    {% import 'macros/nav.twig' as _nav_ %}

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ parent.name }} <span class="caret"></span></a>
        <ul class="dropdown-menu scrollable-menu">
            {% for child in children %}
                {% block children %}
                    <li>{{ _nav_.createSiteLink(child) }}</li>
                {% endblock %}
            {% endfor %}
        </ul>
    </li>
{% endblock %}
