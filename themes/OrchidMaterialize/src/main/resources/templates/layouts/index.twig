<!DOCTYPE html>
<html>
<head>
    {% include 'includes/header.twig' %}
    {% include 'meta.twig' ignore missing %}
    {{ page.theme.styles }}
    <style>
        .container p > img {
            width: 100%;
        }
    </style>
</head>
<body>
<header>
    {% include 'includes/navbar.twig' %}
    {% include 'includes/sidenav.twig' %}
</header>
<main>
    <div class="container">
        {% block jumbotron %}
        {% endblock %}
        {% block pageComponents %}
            {% block pageContent %}
            {% endblock %}
            {% block remainingComponents %}
                {% for component in page.remainingComponents %}
                    {% include component | template('component') %}
                {% endfor %}
            {% endblock %}
        {% endblock %}
    </div>
</main>

{% include 'includes/footer.twig' %}

{{ page.theme.scripts }}

<script>
    $(document).ready(function () {
        $(".button-collapse").sideNav();
    });
</script>
</body>
</html>