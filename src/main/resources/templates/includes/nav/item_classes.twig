{% if index.classes.internal %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false">All Classes <span class="caret"></span></a>
        <ul class="dropdown-menu scrollable-menu">
            {% set classList = index.classes.internal | sortBy('simpleName') %}
            {% for c in classList %}
                <li><a href="{{ c.url }}">{{ c.simpleName }}</a></li>
            {% endfor %}
        </ul>
    </li>
{% endif %}