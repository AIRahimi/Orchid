{% if index.posts %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false">All Posts <span class="caret"></span></a>
        <ul class="dropdown-menu scrollable-menu">
            {% set posts = index.posts | walk('url') %}
            {% if posts.size > 0 %}
                {% for p in posts %}
                    <li><a href="{{ p.url }}">{{ p.name }}</a></li>
                {% endfor %}
            {% endif %}
        </ul>
    </li>
{% endif %}