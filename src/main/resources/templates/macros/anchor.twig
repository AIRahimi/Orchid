{%- macro fieldAnchor(field) -%}
    {{- field.name -}}
{%- endmacro -%}

{%- macro constructorAnchor(constructor) -%}
    {%- if constructor.parameters -%}
        {%- for param in constructor.parameters -%}
            _{{- param.name -}}
        {%- endfor -%}
    {%- else -%}
        noarg
    {%- endif -%}
{%- endmacro -%}

{%- macro methodAnchor(method) -%}
    {{- method.name -}}
    {%- if method.parameters -%}
        {%- for param in method.parameters -%}
            _{{- param.name -}}
        {%- endfor -%}
    {%- endif -%}
{%- endmacro -%}