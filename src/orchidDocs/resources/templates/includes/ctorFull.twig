{% import 'includes/macros/type.twig' as macros %}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            <code>{{- classDoc.info.name -}}({{- macros.formatParameterList(constructor.parameters) -}})</code>
        </h3>
    </div>
    <div class="panel-body">
        <p>{{ constructor.comment.description }}</p>
        {% if constructor.parameters %}
            <h4>Parameters:</h4>
        {% else %}
            <h4>No Parameters</h4>
        {% endif %}
    </div>
    {% if constructor.parameters %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Type</th>
                <th>Variable Name</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for param in constructor.parameters %}
                <tr>
                    <td>{{- macros.formatType(param.type) -}}</td>
                    <td>{{- param.name -}}</td>
                    <td>{{- param.description -}}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    {% endif %}
</div>