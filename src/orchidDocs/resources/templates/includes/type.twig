{{- type.simpleName | link -}}

{%- if type.wildcardType -%}
    {# if the type is a wildcard, display its extends/super types #}
    {%- set superclass = type.wildcardType["extends"] -%}
    {%- if superclass -%}
        extends
        {%- for t in superclass -%}
            {%- include 'templates/includes/type.twig' with { type: t } -%}
            {%- if loop.last == false -%}
                ,
            {%- endif -%}
        {%- endfor -%}
    {%- endif -%}

    {%- if type.wildcardType.super -%}
        super
        {%- for t in type.wildcardType.super -%}
            {%- include 'templates/includes/type.twig' with { type: t } -%}
            {%- if loop.last == false -%}
                ,
            {%- endif -%}
        {%- endfor -%}
    {%- endif -%}
{%- endif -%}
{%- if type.typeParameters -%}
    {# if the type is a parameterized type, display its type parameters inside brackets #}
    &lt;{%- for t in type.typeParameters -%}
    {%- include 'templates/includes/type.twig' with { type: t } -%}
    {%- if loop.last == false -%}
        ,
    {%- endif -%}
{%- endfor -%}&gt;
{%- endif -%}
{% if length(type.dimension) > 0 %}
    <code>{{- type.dimension -}}</code>
{% endif %}